{
  "name": "snipara",
  "displayName": "Snipara",
  "description": "AI-optimized context for your documentation - Query, search, and manage documentation context with semantic search, agent memory, and team collaboration",
  "version": "1.6.0",
  "publisher": "snipara",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Snipara/snipara-vscode"
  },
  "homepage": "https://snipara.com/docs/integration/vscode",
  "bugs": {
    "url": "https://github.com/Snipara/snipara-vscode/issues"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "documentation",
    "ai",
    "context",
    "mcp",
    "llm",
    "semantic-search",
    "copilot",
    "snipara",
    "agent-memory",
    "rlm-runtime",
    "code-execution"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snipara.askQuestion",
        "title": "Ask Question",
        "category": "Snipara"
      },
      {
        "command": "snipara.searchDocs",
        "title": "Search Documentation",
        "category": "Snipara"
      },
      {
        "command": "snipara.showContext",
        "title": "Show Current Context",
        "category": "Snipara"
      },
      {
        "command": "snipara.clearContext",
        "title": "Clear Context",
        "category": "Snipara"
      },
      {
        "command": "snipara.injectContext",
        "title": "Inject Context",
        "category": "Snipara"
      },
      {
        "command": "snipara.configure",
        "title": "Configure",
        "category": "Snipara"
      },
      {
        "command": "snipara.multiQuery",
        "title": "Multi-Query",
        "category": "Snipara"
      },
      {
        "command": "snipara.decompose",
        "title": "Decompose Query",
        "category": "Snipara"
      },
      {
        "command": "snipara.plan",
        "title": "Generate Plan",
        "category": "Snipara"
      },
      {
        "command": "snipara.multiProjectQuery",
        "title": "Multi-Project Query",
        "category": "Snipara"
      },
      {
        "command": "snipara.remember",
        "title": "Remember",
        "category": "Snipara"
      },
      {
        "command": "snipara.recall",
        "title": "Recall Memory",
        "category": "Snipara"
      },
      {
        "command": "snipara.memories",
        "title": "Browse Memories",
        "category": "Snipara"
      },
      {
        "command": "snipara.forget",
        "title": "Forget Memory",
        "category": "Snipara"
      },
      {
        "command": "snipara.sharedContext",
        "title": "Load Shared Context",
        "category": "Snipara"
      },
      {
        "command": "snipara.listTemplates",
        "title": "Browse Templates",
        "category": "Snipara"
      },
      {
        "command": "snipara.getTemplate",
        "title": "Apply Template",
        "category": "Snipara"
      },
      {
        "command": "snipara.swarmCreate",
        "title": "Create Swarm",
        "category": "Snipara"
      },
      {
        "command": "snipara.swarmJoin",
        "title": "Join Swarm",
        "category": "Snipara"
      },
      {
        "command": "snipara.claim",
        "title": "Claim Resource",
        "category": "Snipara"
      },
      {
        "command": "snipara.release",
        "title": "Release Resource",
        "category": "Snipara"
      },
      {
        "command": "snipara.taskCreate",
        "title": "Create Task",
        "category": "Snipara"
      },
      {
        "command": "snipara.taskClaim",
        "title": "Claim Task",
        "category": "Snipara"
      },
      {
        "command": "snipara.taskComplete",
        "title": "Complete Task",
        "category": "Snipara"
      },
      {
        "command": "snipara.broadcast",
        "title": "Broadcast Event",
        "category": "Snipara"
      },
      {
        "command": "snipara.stateGet",
        "title": "Get Shared State",
        "category": "Snipara"
      },
      {
        "command": "snipara.stateSet",
        "title": "Set Shared State",
        "category": "Snipara"
      },
      {
        "command": "snipara.uploadDocument",
        "title": "Upload Document",
        "category": "Snipara"
      },
      {
        "command": "snipara.syncDocuments",
        "title": "Sync Documents",
        "category": "Snipara"
      },
      {
        "command": "snipara.storeSummary",
        "title": "Store Summary",
        "category": "Snipara"
      },
      {
        "command": "snipara.getSummaries",
        "title": "View Summaries",
        "category": "Snipara"
      },
      {
        "command": "snipara.deleteSummary",
        "title": "Delete Summary",
        "category": "Snipara"
      },
      {
        "command": "snipara.showSection",
        "title": "Show Section",
        "category": "Snipara"
      },
      {
        "command": "snipara.refreshMemories",
        "title": "Refresh Memories",
        "category": "Snipara",
        "icon": "$(refresh)"
      },
      {
        "command": "snipara.showStats",
        "title": "Show Statistics",
        "category": "Snipara"
      },
      {
        "command": "snipara.readLines",
        "title": "Read Lines",
        "category": "Snipara"
      },
      {
        "command": "snipara.listCollections",
        "title": "List Collections",
        "category": "Snipara"
      },
      {
        "command": "snipara.uploadSharedDocument",
        "title": "Upload Shared Document",
        "category": "Snipara"
      },
      {
        "command": "snipara.showSettings",
        "title": "Show Project Settings",
        "category": "Snipara"
      },
      {
        "command": "snipara.loadDocument",
        "title": "Load Document (Raw)",
        "category": "Snipara"
      },
      {
        "command": "snipara.loadProject",
        "title": "Load Project",
        "category": "Snipara"
      },
      {
        "command": "snipara.orchestrate",
        "title": "Orchestrate",
        "category": "Snipara"
      },
      {
        "command": "snipara.replContext",
        "title": "Build REPL Context",
        "category": "Snipara"
      },
      {
        "command": "snipara.runtimeExecuteDocker",
        "title": "Execute in Docker (Isolated)",
        "category": "Snipara Runtime",
        "icon": "$(vm-running)"
      },
      {
        "command": "snipara.runtimeExecuteLocal",
        "title": "Execute Locally",
        "category": "Snipara Runtime",
        "icon": "$(terminal)"
      },
      {
        "command": "snipara.runtimeLogs",
        "title": "View Execution Logs",
        "category": "Snipara Runtime",
        "icon": "$(output)"
      },
      {
        "command": "snipara.runtimeVisualize",
        "title": "Launch Trajectory Visualizer",
        "category": "Snipara Runtime",
        "icon": "$(graph)"
      },
      {
        "command": "snipara.demoQuery",
        "title": "Try Demo Query",
        "category": "Snipara"
      }
    ],
    "configuration": {
      "title": "Snipara",
      "properties": {
        "snipara.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Snipara API key",
          "markdownDescription": "API key from [Snipara Dashboard](https://snipara.com/dashboard)"
        },
        "snipara.projectId": {
          "type": "string",
          "default": "",
          "description": "Your Snipara project ID"
        },
        "snipara.serverUrl": {
          "type": "string",
          "default": "https://api.snipara.com",
          "description": "Snipara API server URL"
        },
        "snipara.maxTokens": {
          "type": "number",
          "default": 4000,
          "description": "Maximum tokens for context queries"
        },
        "snipara.searchMode": {
          "type": "string",
          "enum": [
            "keyword",
            "semantic",
            "hybrid"
          ],
          "default": "hybrid",
          "description": "Search mode for context queries"
        },
        "snipara.enableAutoRestore": {
          "type": "boolean",
          "default": false,
          "description": "Automatically restore previous session context on startup"
        },
        "snipara.enableAutoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save session context on shutdown and periodically (every 5 minutes)"
        },
        "snipara.runtimeEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable RLM Runtime integration (execute code, view logs, launch visualizer)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snipara",
          "title": "Snipara",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "snipara": [
        {
          "id": "snipara.welcomeView",
          "name": "Welcome",
          "when": "!snipara.isConfigured"
        },
        {
          "id": "snipara.resultsView",
          "name": "Results"
        },
        {
          "id": "snipara.contextView",
          "name": "Session Context"
        },
        {
          "id": "snipara.memoriesView",
          "name": "Memories"
        },
        {
          "id": "snipara.swarmView",
          "name": "Swarm Dashboard",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "snipara.uploadDocument",
          "when": "resourceExtname =~ /\\.(md|mdx|txt)$/",
          "group": "snipara"
        }
      ],
      "view/title": [
        {
          "command": "snipara.refreshMemories",
          "when": "view == snipara.memoriesView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "snipara.forget",
          "when": "view == snipara.memoriesView && viewItem == memory",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "snipara.resultsView",
        "contents": "Run a query to see results.\n\n[Try Demo Query](command:snipara.demoQuery)\n\n[Sign in (free)](command:snipara.configure)",
        "when": "!snipara.isConfigured"
      },
      {
        "view": "snipara.resultsView",
        "contents": "Run a query to see results.\n\n[Ask Question](command:snipara.askQuestion)",
        "when": "snipara.isConfigured"
      }
    ],
    "keybindings": [
      {
        "command": "snipara.askQuestion",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "walkthroughs": [
      {
        "id": "snipara.gettingStarted",
        "title": "Get Started with Snipara",
        "description": "AI-optimized documentation context in 4 steps",
        "steps": [
          {
            "id": "snipara.walkthrough.demo",
            "title": "See it in action",
            "description": "Run a demo query â€” no sign-in needed.\n\n[Try Demo Query](command:snipara.demoQuery)",
            "media": {
              "markdown": "resources/walkthrough/demo.md"
            },
            "completionEvents": [
              "onCommand:snipara.demoQuery"
            ]
          },
          {
            "id": "snipara.walkthrough.signin",
            "title": "Sign in for free",
            "description": "100 queries/month, no credit card.\n\n[Sign in with GitHub](command:snipara.configure)",
            "media": {
              "markdown": "resources/walkthrough/signin.md"
            },
            "completionEvents": [
              "onCommand:snipara.configure"
            ]
          },
          {
            "id": "snipara.walkthrough.index",
            "title": "Index your documentation",
            "description": "Sync your markdown files.\n\n[Sync Documents](command:snipara.syncDocuments)",
            "media": {
              "markdown": "resources/walkthrough/index.md"
            },
            "completionEvents": [
              "onCommand:snipara.syncDocuments"
            ]
          },
          {
            "id": "snipara.walkthrough.query",
            "title": "Ask your first question",
            "description": "Query your own docs.\n\n[Ask Question](command:snipara.askQuestion)",
            "media": {
              "markdown": "resources/walkthrough/query.md"
            },
            "completionEvents": [
              "onCommand:snipara.askQuestion"
            ]
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "snipara_contextQuery",
        "displayName": "Snipara: Query Documentation",
        "modelDescription": "Search and retrieve relevant documentation sections from Snipara. Use this to find information about code, APIs, or project documentation.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The question or topic to search for"
            },
            "maxTokens": {
              "type": "number",
              "description": "Maximum tokens to return (default: 4000)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_remember",
        "displayName": "Snipara: Store Memory",
        "modelDescription": "Store a fact, decision, learning, or preference for later recall. Memories persist across sessions.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string",
              "description": "The memory content to store"
            },
            "type": {
              "type": "string",
              "enum": [
                "fact",
                "decision",
                "learning",
                "preference",
                "todo",
                "context"
              ],
              "description": "Type of memory (default: fact)"
            }
          },
          "required": [
            "content"
          ]
        }
      },
      {
        "name": "snipara_recall",
        "displayName": "Snipara: Recall Memory",
        "modelDescription": "Semantically recall relevant memories based on a query. Uses embeddings to find similar memories.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query to find relevant memories"
            },
            "limit": {
              "type": "number",
              "description": "Maximum memories to return (default: 5)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_sharedContext",
        "displayName": "Snipara: Get Team Standards",
        "modelDescription": "Retrieve team coding standards, best practices, and guidelines from shared context collections.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "categories": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "MANDATORY",
                  "BEST_PRACTICES",
                  "GUIDELINES",
                  "REFERENCE"
                ]
              },
              "description": "Filter by document categories"
            },
            "maxTokens": {
              "type": "number",
              "description": "Token budget (default: 4000)"
            }
          }
        }
      },
      {
        "name": "snipara_search",
        "displayName": "Snipara: Search Documentation",
        "modelDescription": "Search documentation using regex patterns. Use when the user needs to find specific code patterns, function names, or text in documentation.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "pattern": {
              "type": "string",
              "description": "Regex pattern to search for"
            },
            "maxResults": {
              "type": "number",
              "description": "Maximum results to return (default: 20)"
            }
          },
          "required": [
            "pattern"
          ]
        }
      },
      {
        "name": "snipara_askQuick",
        "displayName": "Snipara: Quick Ask",
        "modelDescription": "Quick documentation lookup returning ~2500 tokens. Use for simple questions when full context query is unnecessary.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "question": {
              "type": "string",
              "description": "The question to ask"
            }
          },
          "required": [
            "question"
          ]
        }
      },
      {
        "name": "snipara_multiQuery",
        "displayName": "Snipara: Multi-Query",
        "modelDescription": "Execute multiple documentation queries in parallel with shared token budget. Use when the user asks about multiple topics at once.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "queries": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of queries to execute in parallel"
            },
            "maxTokens": {
              "type": "number",
              "description": "Total token budget across all queries (default: 8000)"
            }
          },
          "required": [
            "queries"
          ]
        }
      },
      {
        "name": "snipara_plan",
        "displayName": "Snipara: Generate Plan",
        "modelDescription": "Generate a step-by-step execution plan for complex documentation queries. Use when the question requires multiple search passes or spans many topics.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The complex question to plan for"
            },
            "strategy": {
              "type": "string",
              "enum": [
                "breadth_first",
                "depth_first",
                "relevance_first"
              ],
              "description": "Execution strategy (default: relevance_first)"
            },
            "maxTokens": {
              "type": "number",
              "description": "Total token budget (default: 16000)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_decompose",
        "displayName": "Snipara: Decompose Query",
        "modelDescription": "Break a complex query into smaller sub-queries with dependencies. Use when a question is too broad for a single search.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The complex question to decompose"
            },
            "maxDepth": {
              "type": "number",
              "description": "Maximum decomposition depth (default: 2)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_multiProjectQuery",
        "displayName": "Snipara: Multi-Project Query",
        "modelDescription": "Search documentation across all team projects simultaneously. Use when the user wants to find implementations across the entire organization.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The question to search across all projects"
            },
            "maxTokens": {
              "type": "number",
              "description": "Total token budget across all projects (default: 16000)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_memories",
        "displayName": "Snipara: Browse Memories",
        "modelDescription": "Browse stored memories with optional type and search filters. Use to list all remembered facts, decisions, or learnings.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "fact",
                "decision",
                "learning",
                "preference",
                "todo",
                "context"
              ],
              "description": "Filter by memory type"
            },
            "search": {
              "type": "string",
              "description": "Text search within memory content"
            },
            "limit": {
              "type": "number",
              "description": "Maximum memories to return (default: 20)"
            }
          }
        }
      },
      {
        "name": "snipara_forget",
        "displayName": "Snipara: Forget Memory",
        "modelDescription": "Delete stored memories by ID, type, or category. Use when the user wants to remove outdated or incorrect memories.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "memoryId": {
              "type": "string",
              "description": "Specific memory ID to delete"
            },
            "type": {
              "type": "string",
              "enum": [
                "fact",
                "decision",
                "learning",
                "preference",
                "todo",
                "context"
              ],
              "description": "Delete all memories of this type"
            },
            "category": {
              "type": "string",
              "description": "Delete all memories in this category"
            }
          }
        }
      },
      {
        "name": "snipara_stats",
        "displayName": "Snipara: Documentation Stats",
        "modelDescription": "Get documentation statistics including file count, section count, and total characters indexed.",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "snipara_uploadDocument",
        "displayName": "Snipara: Upload Document",
        "modelDescription": "Upload or update a document in the Snipara index. Use when the user wants to add new documentation for querying.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "Document path (e.g. 'docs/api.md')"
            },
            "content": {
              "type": "string",
              "description": "Document content in markdown"
            }
          },
          "required": [
            "path",
            "content"
          ]
        }
      },
      {
        "name": "snipara_loadDocument",
        "displayName": "Snipara: Load Document (Raw)",
        "modelDescription": "Load raw document content by file path. Returns the full unprocessed content of a single document for direct exploration. Requires Pro plan or higher.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "Document path (e.g. 'docs/api.md')"
            }
          },
          "required": [
            "path"
          ]
        }
      },
      {
        "name": "snipara_loadProject",
        "displayName": "Snipara: Load Project",
        "modelDescription": "Load a structured map of all project documents with content. Returns a token-budgeted dump of every file, with optional path filtering. Use for full-project exploration. Requires Team plan or higher.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "maxTokens": {
              "type": "number",
              "description": "Total token budget for returned content (default: 16000)"
            },
            "pathsFilter": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Only include files matching these path prefixes (e.g. ['docs/', 'src/'])"
            },
            "includeContent": {
              "type": "boolean",
              "description": "Include file content (false = metadata only, default: true)"
            }
          }
        }
      },
      {
        "name": "snipara_orchestrate",
        "displayName": "Snipara: Orchestrate",
        "modelDescription": "Multi-round context exploration in a single call. Performs: (1) section scan for project structure, (2) ranked search for top relevant sections, (3) raw file load for highest-scoring documents. Combines search intelligence with raw access. Requires Team plan or higher.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The question or topic to explore"
            },
            "maxTokens": {
              "type": "number",
              "description": "Token budget for raw file content (default: 16000)"
            },
            "topK": {
              "type": "number",
              "description": "Number of top sections to use for file selection (default: 5)"
            },
            "searchMode": {
              "type": "string",
              "enum": [
                "keyword",
                "semantic",
                "hybrid"
              ],
              "description": "Search mode (default: hybrid)"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "snipara_replContext",
        "displayName": "Snipara: REPL Context",
        "modelDescription": "Package project context for REPL consumption. Returns a structured dict of files and sections plus Python helper code (peek, grep, sections, files) ready for injection into an rlm-runtime REPL session. Requires Pro plan or higher.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Optional query to filter context by relevance. If empty, loads files in order within budget."
            },
            "maxTokens": {
              "type": "number",
